<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top">
        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/loading_view_anim_red_point" />

        <ImageView
            android:id="@+id/iv_yellow"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_red"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/loading_view_anim_yellow_point" />

        <ImageView
            android:id="@+id/iv_blue"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_yellow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/loading_view_anim_blue_point" />
    </RelativeLayout>