<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/loading_view_bg_xf5f5f5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

   <LinearLayout
       android:id="@+id/w3_xlistview_header_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:gravity="center"
       android:paddingTop="24dp"
       android:paddingBottom="24dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <com.widget.xlistview.XLoadingView
           android:id="@+id/xlv_loading_img"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/tv_init_loading_text"
           android:layout_marginTop="5dp"
           android:visibility="gone"
           android:singleLine="true"
           android:textColor="@color/loading_view_text_x999999"
           android:textSize="10sp"
           android:text=""
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </LinearLayout>

</LinearLayout>